<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>mod_comparison</name>
	<author>Bruno Batista</author>
	<creationDate>15/06/2012</creationDate>
	<copyright>Copyright (C) 2012 AtomTech, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bruno@atomtech.com.br</authorEmail>
	<authorUrl>http://www.atomtech.com.br</authorUrl>
	<version>2.5.0</version>
	<description>MOD_COMPARISON_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_comparison">mod_comparison.php</filename>
		<folder>tmpl</folder>
		<filename>mod_comparison.xml</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="pt-BR">pt-BR.mod_comparison.ini</language>
		<language tag="pt-BR">pt-BR.mod_comparison.sys.ini</language>
	</languages>
	<media destination="mod_comparison" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<filename>index.html</filename>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="uniqueid" type="text" size="20" default="5" label="Uniqe ID" description="Usefull if there is more then one 'Before'" />
				<field name="widther" type="text" size="20" default="320" label="Width of module" description="Make this the same width as your images" />
				<field name="heighter" type="text" size="20" default="280" label="Height of module" description="Make this the same height as your images" />
				<field name="captions" type="list" default="2" label="Use captions?" description="">
					<option value="1">JNO</option>
					<option value="2">JYES</option>
				</field>
				<field name="beforetext" type="text" size="20" default="before" label="Before caption" description="" />
				<field name="aftertext" type="text" size="20" default="after" label="After caption" description="" />
				<field name="pic1" type="imagelist" default="" label="Before image" description="" directory="images/" exclude="" stripext="" />
				<field name="pic2" type="imagelist" default="" label="After image" description="" directory="images/" exclude="" stripext="" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field name="cachemode" type="hidden" default="static">
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
